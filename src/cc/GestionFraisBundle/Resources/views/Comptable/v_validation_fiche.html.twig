                    <tr>
                        <td> <input type="date" name="date" /> </td>
                        <td> <input type="text" name="libelle" /> </td>
                        <td> <input type="number" name="montant" step="0.01" /> </td>
                        <td> <input type="submit" value="Créer" /> </td>
                    </tr>
                </form>
            </table>
           
            <br><br>
