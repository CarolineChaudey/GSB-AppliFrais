      {# 
        <h4>Eléments forfaitisés :</h4>
        
        <form action="traiterFrais" method="POST">
             
                <label>Etapes</label>
                <input type="number" name="nbEtapes" value="{{ fraisforfait.0.quantite }}"/>
                <br>
                <label>Kms</label>
                <input type="number" name="nbKms" value="{{ fraisforfait.1.quantite }}"/>
